<h1>Calculate Payroll for Store</h1>

<<div style="background-color:#c0c0c0; display: flex; justify-content: center; align-items: center; height: 100vh;">
<div style="max-width: 50%; margin-right: 10%; padding: 20px; background-color: #fff;">
  <%= form_tag({action: :store_payroll}, method: :get) do %>

    <% if current_user && current_user.admin_role? %>
      <div class="form-group">
        <%= label_tag(:store_id, "Store:", style: "color: black;") %>
        <%= select_tag(:store_id, options_from_collection_for_select(Store.all, 'id', 'name')) %>
      </div>

      <div class="form-group">
        <%= label_tag(:start_date, "Start Date:", style: "color: black;") %>
        <%= text_field_tag(:start_date, nil, type: "date") %>
      </div>

      <div class="form-group">
        <%= label_tag(:end_date, "End Date:", style: "color: black;") %>
        <%= text_field_tag(:end_date, nil, type: "date") %>
      </div>

      <%= submit_tag("Calculate Payroll") %>

    <% end %>

    <% if current_user && current_user.manager_role? %>

      <div class="form-group">
        <%= label_tag(:start_date, "Start Date:", style: "color: black;") %>
        <%= text_field_tag(:start_date, nil, type: "date") %>
      </div>

      <div class="form-group">
        <%= label_tag(:end_date, "End Date:", style: "color: black;") %>
        <%= text_field_tag(:end_date, nil, type: "date") %>
      </div>

      <%= submit_tag("Calculate Payroll") %>

    <% end %>

  <% end %>
</div>
<div style="flex: 1; background-image: url('<%= asset_path('pic4.png') %>'); background-size: cover; height: 100%;"></div>
</div>
